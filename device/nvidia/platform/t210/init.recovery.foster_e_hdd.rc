on init
	# clean up the legacy symlinks
	rm /cache
	mkdir /cache

on boot
	# Mount /vendor to load modules for recovery mode
	mount ext4 /dev/block/platform/tegra-sata.0/by-name/vendor /vendor ro
	exec /vendor/bin/lkm_loader.sh recovery

on property:vendor.lkm.completed=1
	umount /vendor
