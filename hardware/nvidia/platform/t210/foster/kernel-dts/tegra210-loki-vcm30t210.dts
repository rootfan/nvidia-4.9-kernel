		nvidia,audio-routing =
			"Headphone-x", 	"x DAC1OUT",
			"Headphone-x", 	"x DAC2OUT",
			"Headphone-x", 	"x DAC3OUT",
			"Headphone-x", 	"x DAC4OUT",
			"x ADC1IN",	"LineIn-x",
