			status = "okay";
		};
	};

	/* Disable XUSB3 to make PCIe both ports work */
	xusb_pad_ctl: xusb_padctl@7009f000 {
		nvidia,lane-map = <0x14>;
		nvidia,ss_ports = <TEGRA_XHCI_SS_P0 TEGRA_XHCI_USB2_P1 TEGRA_XHCI_LANE_6 TEGRA_XHCI_PORT_STD
